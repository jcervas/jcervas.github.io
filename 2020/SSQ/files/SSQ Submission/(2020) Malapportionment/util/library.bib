file = {:Users/cervas/Documents/Mendeley Desktop//Hill, Hopkins, Huber{\_}2019{\_}Local demographic changes and US presidential voting, 2012 to 2016.pdf:pdf},
journal = {Proceedings of the National Academy of Sciences},
title = {{Local demographic changes and US presidential voting, 2012 to 2016}},
year = {2019}
}
