doi = {10.1016/S0261-3794(97)00047-4},
file = {:Users/cervas/Documents/Mendeley Desktop/Grofman, Brunell, Campagna{\_}1997{\_}Distinguishing between the Effects of Swing Ratio and Bias on Outcomes in the US Electoral College, 1(2).pdf:pdf;:Users/cervas/Documents/Mendeley Desktop//Grofman, Brunell, Campagna{\_}1997{\_}Distinguishing between the Effects of Swing Ratio and Bias on Outcomes in the US Electoral College, 1900.pdf:pdf},
issn = {02613794},
journal = {Electoral Studies},
keywords = {Bias,Elections,Proportional representation,Swing ratio},
